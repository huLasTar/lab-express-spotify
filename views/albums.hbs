<div class="container">
    <div class="row">

    {{#each listOfAlbums}}
      <div class="col-sm-3">
          <div class='card'>
              <img class='card-img-top' src='{{this.images.0.url}}' alt='{{this.name}}' />
              <div class="card-body">
                <p>{{this.name}}</p>
              </div>
              <div class="card-footer" style="margin-top: -4px;">
                  <a class="btn btn-danger" href="/tracks/{{this.id}}">Preview Tracks</a>
              </div>
          </div>
      </div> 
    {{/each}}

    </div>
</div>